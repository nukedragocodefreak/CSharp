<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todo.BuyersItemPage" Title="Registrater Buyers">
    <ScrollView>
	<StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Image Source="user.png" WidthRequest="60" HeightRequest="60"/>
        <Label Text="" />
        <Label Text="" />
        <Label Text="User Name" />
        <Entry Text="{Binding UserName}" />
        <Label Text="Name" />
		<Entry Text="{Binding Name}" />
		<Label Text="Phone number" />
		<Entry Text="{Binding Phone}" Keyboard="Telephone" MaxLength="10"/>
		<Label Text="Password" />
        <Entry Text="{Binding Password}" IsPassword="True"/>
        <Button Text="Save" Clicked="OnSaveClicked" BackgroundColor="DarkOrange" TextColor="White"/>
        <Button Text="Delete" Clicked="OnDeleteClicked" BackgroundColor="DarkOrange" TextColor="White"/>
            <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="DarkOrange" TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>