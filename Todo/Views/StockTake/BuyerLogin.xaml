<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todo.BuyerLogin" Title="Buyer Login">
    <ScrollView>
        <StackLayout Margin="20" VerticalOptions="StartAndExpand">
            <Label Text="" />
            <Label Text="" />
            <Label Text="Username" />
            <Entry Text="{Binding UserName}" x:Name="UserName"/>
            <Label Text="Password" />
            <Entry Text="{Binding Password}" x:Name="Password" IsPassword="True"/>
            <Button Text="Login" Clicked="OnSaveClicked" BackgroundColor="DarkOrange" TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>