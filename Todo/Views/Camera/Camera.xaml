<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todo.Camera" Title="Competition">

    <ContentPage.Content>
        <ScrollView>
        <StackLayout Spacing="10" Padding="10">
                <Button x:Name="takePhoto" Text="TakePhoto"/>
                <Image x:Name="image"  HeightRequest="300" WidthRequest="300"/>
                <Entry Placeholder="Comments" x:Name="Notes"/>
                <Button Clicked="Button_Clicked" Text="Save Data" BackgroundColor="DarkOrange" TextColor="White"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>